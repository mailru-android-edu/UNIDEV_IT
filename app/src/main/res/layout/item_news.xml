<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        android:layout_margin="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/item_news__iv_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        <TextView
                android:id="@+id/item_news__tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="27 Янв 2020"
                android:textSize="12sp"
                android:textColor="@color/secondary_text"
                app:layout_constraintStart_toStartOf="@id/item_news__tv_title"
                app:layout_constraintBottom_toTopOf="@id/item_news__tv_title"/>

        <TextView
                android:id="@+id/item_news__tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="Добро пожаловать"
                android:textSize="30sp"
                android:textColor="@color/primary_color"
                app:layout_constraintBottom_toBottomOf="@id/item_news__btn_more"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/item_news__btn_more"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"/>

        <Button
                android:id="@+id/item_news__btn_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/more_text"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="24dp"
                style="?attr/materialButtonOutlinedStyle"
                android:backgroundTint="@color/white"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>