<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        app:cardBackgroundColor="@color/light_red"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/training_item__tv_dayofweek"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#eeeeee"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/training_item__tv_dayofmonth"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Понедельник" />

        <TextView
                android:id="@+id/training_item__tv_dayofmonth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="14sp"
                android:textColor="#b3b3b3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/training_item__tv_dayofweek"
                tools:text="24 сентября" />

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="10dp"
                android:id="@+id/zxc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/training_item__tv_dayofmonth">

            <View
                    android:id="@+id/qwe"
                    android:layout_height="1dp"
                    android:layout_width="match_parent"
                    android:background="#000000"
                    app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                    android:id="@+id/training_item__iv_poster"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/qwe"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:src="@drawable/ic_menu_glav" />

            <TextView
                    android:id="@+id/training_item__tv_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="16sp"
                    android:textColor="#eeeeee"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/training_item__iv_poster"
                    app:layout_constraintTop_toTopOf="@+id/training_item__iv_poster"
                    app:layout_constraintBottom_toTopOf="@+id/training_item__tv_time"
                    tools:text="Силовая тренировка" />

            <TextView
                    android:id="@+id/training_item__tv_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="14sp"
                    android:textColor="#b3b3b3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/training_item__iv_poster"
                    app:layout_constraintTop_toBottomOf="@+id/training_item__tv_name"
                    app:layout_constraintBottom_toTopOf="@+id/training_item__tv_difficulty"
                    tools:text="Время: 45 минут" />

            <TextView
                    android:id="@+id/training_item__tv_difficulty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="14sp"
                    android:textColor="#b3b3b3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/training_item__iv_poster"
                    app:layout_constraintBottom_toBottomOf="@+id/training_item__iv_poster"
                    app:layout_constraintTop_toBottomOf="@+id/training_item__tv_time"
                    tools:text="Сложность: средняя" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>